<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <!-- Settings Icon on the left -->
    <ImageView
        android:id="@+id/settingsIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_settings"
        android:contentDescription="Settings"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/tabLayoutCategories"
        app:layout_constraintBottom_toBottomOf="@id/tabLayoutCategories"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TabLayout to the right of settings icon -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutCategories"
        android:layout_width="0dp"
        android:layout_height="64dp"
        app:tabMode="scrollable"
        app:layout_constraintStart_toEndOf="@id/settingsIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- ViewPager2 below the top bar -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerCategories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayoutCategories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
